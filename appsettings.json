{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Backend": "Debug"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "File": {
      "Path": "logs/app.log",
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "Backend": "Debug"
      },
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCountLimit": 5
    }
  },
  "Jwt": {
    "Key": "your-super-secret-jwt-key-here-minimum-16-characters",
    "Issuer": "medical-tracker-backend",
    "Audience": "medical-tracker-frontend",
    "AccessTokenCookieName": "medical_tracker_access_token",
    "RefreshTokenCookieName": "medical_tracker_refresh_token"
  },
  "Frontend": {
    "Url": "http://localhost:3000"
  },
  "AllowedHosts": "*"
}
