{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Backend": "Debug"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "File": {
      "Path": "logs/app.log",
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "Backend": "Debug"
      },
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCountLimit": 5
    }
  },
  "AllowedHosts": "*"
}
